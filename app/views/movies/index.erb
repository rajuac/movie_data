<h1>Movie List</h1>
<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |mv| %>
      <tr>
        <td><%= mv["Title"] %></td>
        <td><%= mv["Year"] %></td>
        <td><%= link_to "Show", movies_show_path(:id=>mv["imdbID"]) %></td>
        <td><%= link_add_favourites(mv["imdbID"]) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>